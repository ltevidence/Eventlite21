<!DOCTYPE html>
<html>
  <head>
    <title>EventLite</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 
    <link rel="stylesheet" href="application.css">
  </head>

  <body>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <div class="container-fluid">
  <a class="navbar-brand" href="#">EventLite</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
        <%= link_to "Accueil", events_path, class:"text-white"%>
      </li>
  <% if isAdmin? %>
  <li class="nav-item">
    <a href="#">Gestion du site</a></li>
  <%end%>
    <% if user_signed_in? %>
      <li class="nav-item">
      
         <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "text-white"%>
      </li>
      <% else %>
      <li class="nav-item">    
      <%= link_to "Connexion", new_user_session_path, class: "text-white"%>
    </li>
    <li class="nav-item">
      <%= link_to "Inscription", new_user_registration_path,class: "text-white" %>
    </li>
    <% end %>
    </ul>
    </div>
  </div>
</nav>
<br><br><br><br><br><br>
<div class="user-menu">
  <% if user_signed_in? %>
    <center>
      <p>Connecté en tant que : <%= current_user.email %></p></center>
   <ul>
    <li>
      <button class="btn btn-danger"><a href="/profile/<%=current_user.id%>" class="text-white">Mon profil</a></button>
    </li>
    <li>
      <button class="btn btn-danger"><a href="/users/edit" class="text-white">Changer de mot de passe / email</a></button>
    </li>
    <li><button class="btn btn-danger"><a href="/events/new" class="text-white">Nouvel Evènement</a></button></li>
</ul>
  <% else %>  
  <% end %>
</div>
    <%= yield %>

  <!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

<!-- Option 2: Separate Popper and Bootstrap JS -->
<script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
  </body>
</html>